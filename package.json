{
  "name": "nextjs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm run twbuild && next dev",
    "build": "npm run twbuild && next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "twbuild": "npx tailwindcss -i ./styles/main.css -o ./dist/main.css",
    "watch": "npx tailwindcss -i ./styles/main.css -o ./dist/main.css --watch"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@ducanh2912/next-pwa": "^10.2.9",
    "color-convert": "^2.0.1",
    "next": "^15.5.9",
    "qrcode": "^1.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typed.js": "^2.0.16"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "autoprefixer": "^10.4.15",
    "eslint": "^9",
    "globals": "^17.1.0",
    "jest": "^29",
    "jest-environment-jsdom": "^29",
    "postcss": "^8.4.29",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^12.0.1",
    "tailwindcss": "^3.3.3"
  }
